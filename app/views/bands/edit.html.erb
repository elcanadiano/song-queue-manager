<% provide(:title, "Edit Band") %>
<h1>Edit Your Band</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@band) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= render 'band_fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
