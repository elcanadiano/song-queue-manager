<% provide(:title, 'Create a Band') %>
<h1>Create a Band</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@band) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= render 'band_fields', f: f %>

      <%= f.submit "Create New Band", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
