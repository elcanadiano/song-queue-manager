<% provide(:title, 'Invite a Member') %>
<h1>Invite a Member</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@notification, url: create_invite_band_url) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.hidden_field :band_id, value: @band.id %>

      <%= f.hidden_field :creator_id, value: current_user.id %>

      <%= f.label :user_id %>
      <%= f.number_field :user_id, class: 'form-control' %>

      <%= f.submit "Invite Member", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
