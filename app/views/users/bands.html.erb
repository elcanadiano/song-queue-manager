<% provide(:title, "Showing Bands for #{@user.name}") %>
<div class="row">
  <div class="col-md-12">
    <h1>Showing Bands for <%= @user.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to "Create a Band", new_band_url, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <ul class="users">
      <%= render @memberships || "<li>You currently are not a member of any bands. Why not join or create one?</li>" %>
    </ul>
  </div>
</div>
