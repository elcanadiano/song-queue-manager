<% provide(:title, 'Events') %>
<h1><%= @event.name %></h1>

<% if @event.is_open %>
  <div class="row">
    <%= link_to "New Request", request_event_url(@event.id), class: "btn btn-primary" %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8">
    <ul class="users">
      <%= render partial: "event_requests", collection: @requests, as: "song_request" %>
    </ul>
  </div>

  <div class="col-md-4">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Band Name</th>
            <th>Song Count</th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "request_counts", collection: @request_counts, as: "request_count" %>
        </tbody>
      </table>
    </div>
  </div>
</div>
