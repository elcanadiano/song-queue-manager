<% provide(:title, 'Events') %>
<h1>Events</h1>

<% if admin? %>
  <div class="row">
    <%= link_to "New Event", new_event_url, class: "btn btn-primary" %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Event</th>
            <th>Date</th>
            <% if admin? %>
              <th>Edit</th>
              <th>Open/Close</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "event", collection: @events, as: "event" %>
        </tbody>
      </table>
    </div>
  </div>
</div>
